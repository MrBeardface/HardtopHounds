<div class="form-group">
  <%= f.text_field :name, class: 'form-control input-lg', placeholder: 'Forum Name' %>
</div>

<%= form_for @topics do |f| %>
<div class="form-group">
  <%= f.text_field :title, class: 'form-control input-lg', placeholder: 'Project Title' %>
</div>

<div class="form-group">
  <%= f.text_area :description, rows: 4, class: 'form-control', placeholder: 'Project Description' %>
</div>
<% end %>



<%= f.submit class: 'btn btn-success' %>