                <%= link_to edit_user_registration_path do %>
                  <i class="fa fa-fw fa-cog"></i> Edit Settings
                <% end %>
              </li>
              <li class="divider"></li>
              <li>
                <%= link_to destroy_user_session_path, method: "delete" do %>
                  <i class="fa fa-fw fa-sign-out"></i> Sign out
