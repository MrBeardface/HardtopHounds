<% if current_user %>
  <% unless @blog.user == current_user %>
    <div id="favorite-form">
    <% if @fav_blog %>
      <%= form_tag favorite_blog_path(@fav_blog), method: :delete do %>
        <%= button_tag class: "btn btn-sm btn-default" do %>
          <i class="fa fa-bookmark text-danger"></i>
        <% end %>
      <% end %>
    
    <% else %>

      <%= form_tag favorite_blogs_path, method: :post do %> 
        <div><%= hidden_field_tag :blog_id, @blog.id %></div>
        <%= button_tag class: "btn btn-sm btn-default" do %>
          <i class="fa fa-bookmark text-success"></i>
        <% end %>
      <% end %>
    <% end %>
    </div>
  <% end %>
<% end %>